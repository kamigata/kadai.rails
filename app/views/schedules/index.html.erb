<h1>予定一覧</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_date.strftime('%Y/%m/%d') %></td>
        <td><%= schedule.end_date.strftime('%Y/%m/%d') %></td>
        <td><%= schedule.all_day ? '○' : '' %></td>
        <td><%= schedule.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to '詳細', schedule_path(schedule) %></td>
        <td><%= link_to '編集', edit_schedule_path(schedule) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>予定の合計数: <%= @schedules.count %></p>
<p>本日の日付: <%= Time.now.in_time_zone('Tokyo').strftime('%Y/%m/%d') %></p>
